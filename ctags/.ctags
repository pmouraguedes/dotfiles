--recurse
--languages=python,java,c,c++
--exclude=.git
--langmap=c++:+.cyy

--langdef=c3
--langmap=c3:.c3
--regex-c3=/^[ \t]*func[ \t]+([a-zA-Z_][a-zA-Z0-9_]*)/\1/f,Function/
--regex-c3=/^[ \t]*struct[ \t]+([a-zA-Z_][a-zA-Z0-9_]*)/\1/s,Struct/
--regex-c3=/^[ \t]*var[ \t]+([a-zA-Z_][a-zA-Z0-9_]*)/\1/v,Variable/

